            .swiper-slide
              img.swiper-slide-image(src=require("Images/home/swipper-one.png"))
            .swiper-slide
              img.swiper-slide-image(src=require("Images/home/swipper-one.png"))
            .swiper-slide
              img.swiper-slide-image(src=require("Images/home/swipper-one.png"))
            .swiper-slide
              img.swiper-slide-image(src=require("Images/home/swipper-one.png"))
            .swiper-slide
              img.swiper-slide-image(src=require("Images/home/swipper-one.png"))
              //- |...
          .swiper-pagination
          .swiper-button-prev
          .swiper-button-next
          //- .swiper-scrollbar

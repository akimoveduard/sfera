//- Подключение макета
extends Views/layouts/default.pug

//- Инициализация переменных для использования в макете
block variables
  - const title = 'SFERA'
  - const description = 'Описание страницы'

//- Подключение индивидуального скрипта страницы
append script
  script(src=require('./main.js') defer)

//- Подключение уникального стиля страницы
append style
  link(href=require('./styles.scss') rel='stylesheet')

block content
  section.lead
    .lead__wrapper
      .lead__container
        .lead__conteiner__text
          h1.lead__title  СКАЧАЙТЕ
            <br> ПРИЛОЖЕНИЕ SFERA
          p.lead__subtitle Присоединяйтесь к нам, давайте
            <br> изменим мир вместе. 
          .lead__link
            button.lead__button Скачать на Android
            button.lead__button Скачать на OIS
        .lead__image
          .lead__image__ios 
            img(src=require("Images/downloads/ios.png"))
          .lead__image__android
            img(src=require("Images/downloads/android.png"))
//- Подключение макета
extends Views/layouts/default.pug

//- Инициализация переменных для использования в макете
block variables
  - const pageName = 'apps'
  - const title = 'SFERA'
  - const description = 'Описание страницы'
  - const swiperEnable = true

//- Подключение индивидуального скрипта страницы
append script
  script(src='https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js')
  script(src=require('./main.js'))

//- Подключение уникального стиля страницы
append style
  link(href='https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css' rel='stylesheet')
  link(href=require('./styles.scss') rel='stylesheet' defer)


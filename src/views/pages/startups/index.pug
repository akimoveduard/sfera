//- Подключение макета
extends Views/layouts/default.pug

//- Инициализация переменных для использования в макете
block variables
  - const title = 'SFERA'
  - const description = 'Описание страницы'

//- Подключение индивидуального скрипта страницы
append script
  script(src=require('./main.js') defer)

//- Подключение уникального стиля страницы
append style
  link(href=require('./styles.scss') rel='stylesheet')

block content
  section.section.startups
    .section__wrapper 
      .lead
        .lead__texts  
          h1.lead__title Приглашаем стартапы </br> в SFERA
        .lead__images 
          p.lead__text Для действующих стартапов, которые находятся на стадии разработки или уже имеют работающий функционал мы готовы рассмотреть вопрос интеграции в SFERA, </br>при соблюдении следующих условий.
          img.lead__image(src=require('Images/startups-svg/iPhone_12_Pro.png'))
    


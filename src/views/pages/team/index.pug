//- Подключение макета
extends Views/layouts/default.pug

//- Инициализация переменных для использования в макете
block variables
  - const title = 'SFERA'
  - const description = 'Описание страницы'

//- Подключение индивидуального скрипта страницы
append script
  script(src=require('./main.js') defer)

//- Подключение уникального стиля страницы
append style
  link(href=require('./styles.scss') rel='stylesheet')


block content
  -
    const team = [
      {
        name: 'Игорь',
        role: 'Основатель',
        image: '1',
      },
      {
        name: 'Карен',
        role: 'Проект-менеджер',
        image: '2',
      }
    ]
  
  //- Верстай ниже
  article.team
    section.team__photos.section 
      .section__wrapper 
        ul.team__list 
          each person in team
            li.team__item
              img.team__photo(src= require("Images/team/" + person.image + ".jpg"), alt="Фото участника команды SFERA")
              p.team__person-name= person.name + " "
                span.team__person-role= person.role